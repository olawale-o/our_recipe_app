<div class="col-md-6 offset-md-3">
  <%= form_with model: @recipe, url: recipes_path do |f| %>
    <%= render 'shared/error', resource: @recipe %>
    <div class="my-2">
      <%= f.label :name, { class: "form-label" }  %>
      <%= f.text_field :name, { class: "form-control", placeholder: "Recipe 1", required: true } %>
    </div>
    <div class="my-2">
      <%= f.label :preparation_time, { class: "form-label" } %>
      <%= f.number_field :preparation_time, { class: "form-control", placeholder: "1", required: true, step: ".01" } %>
    </div>
    <div class="my-2">
      <%= f.label :cooking_time, { class: "form-label" } %>
      <%= f.number_field :cooking_time, { class: "form-control", placeholder: "1.5", required: true, step: ".01"} %>
    </div>
    <div class="form-switch my-2">
      <%= f.label :public, { class: "form-check-label", for: "recipe_public" } %>
      <%= f.check_box :public, { class: "form-check-input", } %>
    </div>
    <div class="my-2">
      <%= f.text_area :description, { size: "30x5", class: "form-control", placeholder: "Description", required: true } %>
    </div>
    <div class="text-center my-2">
      <%= f.submit "Create recipe", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>