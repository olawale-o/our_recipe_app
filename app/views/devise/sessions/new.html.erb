<div class="col-md-6 offset-md-3">
  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field my-3">
      <%= f.email_field :email, { autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com", required: true } %>
    </div>

    <div class="field my-3">
      <%= f.password_field :password, { autocomplete: "current-password", class: "form-control", placeholder: "******", required: true } %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "Log in", { class: "btn btn-danger" } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
