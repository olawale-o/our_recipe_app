<div class="col-md-6 offset-md-3">
  <%= form_with model: @inventory, url: inventories_path do |f| %>
    <%= render 'shared/error', resource: @inventory %>
    <div class="my-2">
      <%= f.label :name, { class: "form-label" }  %>
      <%= f.text_field :name, { class: "form-control", placeholder: "Inventory 1", required: true } %>
    </div>
    <div class="my-2">
      <%= f.text_area :description, { size: "30x5", class: "form-control", placeholder: "Description", required: true } %>
    </div>
    <div class="text-center my-2">
      <%= f.submit "Add inventory", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>