<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a food</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @food, url: foods_path do |f| %>
          <div class="my-2">
            <%= f.text_field :name, { class: "form-control", placeholder: "Apple", required: true } %>
          </div>
          <div class="my-2">
            <%= f.text_field :measurement_unit, { class: "form-control", placeholder: "grams", required: true } %>
          </div>
          <div class="my-2">
            <%= f.text_field :price, { class: "form-control", placeholder: "10", required: true } %>
          </div>
          <div class="text-center my-2">
            <%= f.submit "Create food", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>